	<View id="container" class="container">
		<Label id="hint" class="f-body-1 hint" platform="ios"/>
		<TextArea id="txt" class="f-body-1 txt txt-textarea" onChange="txtChange">
			<KeyboardToolbar platform="ios">
				<Toolbar>
					<Items>
						<FlexSpace/>
						<Button style="DONE" titleid="button_done" onClick="txtReturn"/>
					</Items>
				</Toolbar>
			</KeyboardToolbar>
		</TextArea>	
		<View id="border" class="border"/>
	</View>
</Alloy>
